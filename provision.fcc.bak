variant: fcos
version: 1.2.0
systemd:
  units:
    - name: var-opt.mount
      enabled: true
      contents: |
        [Unit]
        Description=Additional drive

        [Mount]
        What=/dev/disk/by-uuid/d7b61f10-9a24-4d6d-b434-a52cb97b33be
        Where=/var/opt
        Type=xfs
        Options=defaults

        [Install]
        WantedBy=multi-user.target
